{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Truecrypt build by make",
            "command": "${workspaceFolder}/truecrypt/buildScript.sh",
            "options": {
                "cwd": "${workspaceFolder}/truecrypt/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}